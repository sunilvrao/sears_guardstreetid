/************************************************************************************
CUSTOM INDEX
*************************************************************************************/
.section-blue-bar {
	width: 100%;
	background-color: #015794;
	color: #ffffff;
	padding: 20px 20px 20px 20px;
}
.section-neighborhood-content {
	padding: 30px 20px 30px 20px;
}
.section-street-smart {
	width: 100%;
	background-image:url(<%= asset_path('street-smart-mobile.jpg') %>);
	background-repeat: no-repeat;
	background-position: left;
	background-size: 120%;
}
.section-street-smart-content {
	padding: 60px 20px 90px 20px;
}
.section-packages-content {
	padding: 30px 20px 30px 20px;
}
.section-light-gray {
	width: 100%;
	background-color: #e6e7e8;
	padding: 20px 0 20px 0;
}
.arrow-left {
	margin-right: 10px;
}
.arrow-right {
	margin-left: 10px;
}
.section-details {
	width: 100%;
	padding-bottom: 20px;
}
.learn-more {
	margin-bottom: 40px;
}
.large-hdr {
	font-size: 40px;
}
.large-hdr-enroll {
	font-size: 28px;
	line-height:32px;
}
.header-formatting-discover {
	width: 100%;
	display: block;
	margin-right: auto;
	margin-left: auto;
}
.header-formatting-enroll {
	width: 100%;
	display: block;
	margin-right: auto;
	margin-left: auto;
}
.text-word-on-the-street {
	font-size: 30px;
	line-height: 22px;
	color: #eeaf3e;
	font-weight: bold;
	margin: 0;
	padding: 0;
}
.text-word-on-the-street-small {
    font-size: 18px;
    line-height: 22px;
    color: #eeaf3e;
    margin: 0;
    padding: 0;
}

.text-word-on-the-street-quote {
	font-size: 18px;
	line-height: 22px;
	color: #fff;
	margin: 0;
	padding: 0;
}
a.community {
	color: #55b74e;
	text-decoration: none;
	font-size: 13px;
	text-transform: uppercase;
}
a.community:hover, a:focus {
	color: #dba139;
	text-decoration: underline;
}
a.community:focus {
	outline: thin dotted;
	outline: 5px auto -webkit-focus-ring-color;
	outline-offset: -2px;
}
a.guardsmen {
	font-family: 'CantoriaMTStdBold';
	color: #ee3022;
	text-decoration: none;
	font-size: 13px;
	text-transform: uppercase;
}
a.guardsmen:hover, a:focus {
	color: #dba139;
	text-decoration: underline;
}
a.guardsmen:focus {
	outline: thin dotted;
	outline: 5px auto -webkit-focus-ring-color;
	outline-offset: -2px;
}
a.package {
	font-family: 'CantoriaMTStdBold';
	color: #009ed9;
	text-decoration: none;
	font-size: 13px;
	text-transform: uppercase;
}
a.package:hover, a:focus {
	color: #dba139;
	text-decoration: underline;
}
a.package:focus {
	outline: thin dotted;
	outline: 5px auto -webkit-focus-ring-color;
	outline-offset: -2px;
}
.text-price-section {
	height: 95px;
	margin-top: 30px;
}
.text-price {
	font-size: 30px;
	color: #005794;
	font-weight: normal;
	text-transform: uppercase;
}
.text-price-large {
	font-size: 70px;
	line-height: 50px;
	font-weight: bold;
	color: #005794;
}
.text-price-monthly {
	font-size: 18px;
	font-weight: normal;
	color: #005794;
	margin-top: -18px;
}
#pro-li {
	font-weight: normal;
	width: 100%;
}
#pro-li ul {
	margin: 0;
	padding: 0;
	list-style: none;
	margin-top: 0px;
}
ul.top-level-pro-li {
	background: #ddf1dc;
	border-top: 1px solid #bbe2b8;
}
ul.top-level-pro-li li {
	list-style: none;
	border-bottom: 1px solid #bbe2b8;
	padding: 0;
	margin: 0;
}
#pro-li a {
	color: #000;
	cursor: pointer;
	display: block;
	text-decoration: none;
	text-align: center;
	font-size: 16px;
	line-height: 23px;
	font-weight: normal;
	padding: 5px 0 5px 0;
	margin: 0;
}
#pro-li a:hover {
	color: #000;
	font-weight: normal;
	text-decoration: none;
}
#pro-li li:hover {
	background: #fff;
	position: relative;
}
#pro-li a:active {
	color: #cccccc;
	font-weight: normal;
	text-decoration: none;
}
#pro-li li:active {
	background: #fff;
	position: relative;
	color: #a00724;
	font-weight: bold;
}
